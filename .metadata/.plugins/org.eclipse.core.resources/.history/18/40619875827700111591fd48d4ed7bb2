package shipmodel;

import java.util.Arrays;

import comu.K;


public class Flota {
	
	byte C,R;
	byte[] SR;
	byte[] SC;
	byte[] Ls;	
			  		
	Vaixell[] TP;
	Vaixell[][] S;

	
	public Flota(int c,int r,byte[] l){	
		C=(byte)c;
		R=(byte)r;
		
		SR = new byte[C];
		SC = new byte[R];			
	}	
	
	public void CombinacionsPosibles(){
					
		CreaTaulaPosicions();
		InclouPosicionsxSumes(); 	
		
		S = new Vaixell[0][0];
				
	}
	
	public void BuscaCombinacions(Vaixell[] check,Vaixell[] Taula){
	
		check = Arrays.copyOf(check,check.length+1);		
		
	} 
	
	public void CreaTaulaPosicions(){
	
		int mL=1;
		
		for (byte b:Ls) mL = mL>b?mL:b;
		
		TP = new Vaixell[mL];
		
		for (byte n=0;n<mL;n++)
		TP[n] = new Vaixell(n);
	}
	
	public void InclouPosicionsxSumes(){
	
		byte i,j,k,m;
		boolean z;
	
		for (j=0;j<R;j++)
		for (i=0;i<C;i++)
		for (Vaixell v:TP)
		{
			if (v.L<=SC[j]&&i+v.L-1<C)
			{
				z=false;
				for (k=i;k<i+v.L;k++) z|=SR[k]==0;
				
				if (!z)
				v.ps.add(i,j,K.HOR);
			}
			
			if (v.L<=SR[i]&&j+v.L-1<R) 
			{
				z=false;
				for (m=j;m<j+v.L;m++) z|=SC[m]==0;
				
				if (!z)
				v.ps.add(i,j,K.VER);
			}								
		}							
	}		
	
	public String toString(){
		int i=0;
		String r="";
		
		if (S==null) return "No s\'ha creat cap flota";
	
		for (Vaixell[] s:S)
		{
			r+="\nSoluciÃ³ " + (++i);
			for (Vaixell v:s) r+=v.toString();
		}
		
		return r;
		
		
	}
}
