package dvtr.games.logic.BS10;

import android.content.Context;
import android.content.SharedPreferences;
import android.os.Parcel;
import android.os.Parcelable;

public class BS10Settings implements Parcelable {

	public final static String prefName = "BS10Settings";

	public final static byte GS_CLASSIC=0,
						     GS_WWII=1,
						     GS_NOBMPS=2,
						     GS_RANDOM=3;					    
						     
	public int GraphicalSet = GS_CLASSIC;
	public Context ctx;
	
	public BS10Settings(Context context) {
		ctx = context;
		GraphicalSet = (byte) ctx.getSharedPreferences(prefName,0).getInt("GS",GS_CLASSIC);
	}	
	
	public void Save(){
      SharedPreferences.Editor edit = ctx.getSharedPreferences(prefName, 0).edit();      
      edit.putInt("GS",GS_RANDOM);//GraphicalSet);      
      edit.commit();
    }

	@Override
	public int describeContents() {
		// TODO Auto-generated method stub
		return 0;
	}

	@Override
	public void writeToParcel(Parcel arg0, int arg1) {
		// TODO Auto-generated method stub
		arg0.writeInt(GraphicalSet);		
	}
	
// 	this is used to regenerate your object. All Parcelables must have a CREATOR that implements these two methods
    public static final Parcelable.Creator<BS10Settings> CREATOR = new Parcelable.Creator<BS10Settings>() {
        public MyParcelable createFromParcel(Parcel in) {
            return new MyParcelable(in);
        }

        public MyParcelable[] newArray(int size) {
            return new MyParcelable[size];
        }
    };

    // example constructor that takes a Parcel and gives you an object populated with it's values
    private MyParcelable(Parcel in) {
        mData = in.readInt();
    }	
}



























































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































